{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/main.css') }}">
{% endblock %}

{% block body %}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('echec') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}

    <h1 class="h1Contact">L'entreprise</h1>
    <hr class="hrContact">
    <div>
        <i class="far fa-fw fa-address-card"></i><span class="infoContact"> &nbsp - {{ infoPerso.nom }} {{ infoPerso.prenom }}</span><br>
        <i class="fas fa-fw fa-map-marker-alt "></i><span class="infoContact"> &nbsp - {{ infoPerso.adresse }}</span><br>
        <i class="fas fa-fw fa-at"></i><span class="infoContact"> &nbsp - {{ infoPerso.mail }}</span><br>
        <i class="fas fa-fw fa-mobile-alt"></i><span class="infoContact"> &nbsp - {{ infoPerso.tel }}</span>
    </div>

    <br/>
    <h1 class="h1Contact">Formulaire de contact</h1>
    <hr class="hrContact">

    {{ form(form) }}



{% endblock %}
