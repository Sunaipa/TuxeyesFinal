{% extends 'baseAdmin.html.twig' %}

{% block title %}InfoContact{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/Crud.css') }}">
{% endblock %}

{% block body %}

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ info_contact.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ info_contact.nom }}</td>
            </tr>
            <tr>
                <th>Tel</th>
                <td>{{ info_contact.tel }}</td>
            </tr>
            <tr>
                <th>Entreprise</th>
                <td>{{ info_contact.entreprise }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ info_contact.mail }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ info_contact.message }}</td>
            </tr>
            <tr>
                <th>DateEnvoi</th>
                <td>{{ info_contact.dateEnvoi ? info_contact.dateEnvoi|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('info_contact_index') }}">Retour</a>
    <p></p>
    {{ include('info_contact/_delete_form.html.twig') }}
{% endblock %}
