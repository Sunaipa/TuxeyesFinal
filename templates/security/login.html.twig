{% extends 'baseAdmin.html.twig' %}

{% block title %}Login{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/Crud.css') }}">
{% endblock %}

{% block body %}
    <h1>Connexion</h1>

    <form action="{{ path('security_co') }}" method="post">
        <div class="form-group">
            <input placeholder="Identifiant ..." name="_username" required type="text" class="form-control">
        </div>
        <div class="form-group">
            <input placeholder="Mot de passe ..." name="_password" required type="password" class="form-control">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success">Connexion</button>
        </div>
    </form>

{% endblock %}